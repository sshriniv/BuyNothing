<table class='table borderless table-condensed'>
  <%@groups.each do |group| %>
    <tr>
        <td><%=image_tag group.group_avatar.url(:original), size: "100x10",:class => "img-responsive" %></td>
        <td><h2><%= link_to group.name, group %></h2> <%= link_to 'Edit', edit_group_path(group) %> |  <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <%end%>
</table>


